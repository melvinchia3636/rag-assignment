<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ProgressIndicator?>

<VBox fx:id="root" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.assignment.controller.MainController"
      stylesheets="@main.css">
    <children>
        <SplitPane dividerPositions="0.251" focusTraversable="true" prefHeight="-1.0"
                   prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <items>
                <dev.assignment.view.SessionSidebar fx:id="sessionSidebar"
                                                   SplitPane.resizableWithParent="false" />
                <VBox>
                    <children>
                        <HBox alignment="CENTER">
                            <children>
                                <VBox>
                                    <children>
                                        <Label fx:id="sessionNameLabel" text="No Session Selected"
                                               styleClass="label-session-name">
                                            <font>
                                                <Font name="System Italic" size="18.0"/>
                                            </font>
                                        </Label>
                                        <Label fx:id="sessionCreatedLabel" text=""
                                               styleClass="label-session-created"/>
                                    </children>
                                </VBox>
                                <Pane HBox.hgrow="ALWAYS" />
                                <Button fx:id="clearSessionButton" mnemonicParsing="false"
                                        onAction="#handleClearSession"
                                        text="Clear Session" visible="false" managed="false"
                                        styleClass="button">
                                    <graphic>
                                        <ImageView fitHeight="150.0" fitWidth="18.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@tabler--trash.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <HBox.margin>
                                        <Insets right="10.0" />
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="manageKnowledgebaseButton" mnemonicParsing="false"
                                        onAction="#handleManageKnowledgebase"
                                        text="Manage Knowledgebase" visible="false" managed="false"
                                        styleClass="button">
                                    <graphic>
                                        <ImageView fitHeight="150.0" fitWidth="18.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@uil--books.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="toggleThemeButton" text="Toggle Theme" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                        </HBox>

                        <ScrollPane fx:id="chatScrollPane" fitToHeight="true" fitToWidth="true"
                                    hbarPolicy="NEVER" pannable="true"
                                    prefHeight="200.0" prefWidth="200.0"
                                    style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                            <content>
                                <VBox fx:id="chatContainer" alignment="TOP_CENTER"
                                      maxHeight="1.7976931348623157E308"
                                      maxWidth="1.7976931348623157E308" spacing="6.0"/>
                            </content>
                        </ScrollPane>

                        <HBox alignment="CENTER">
                            <children>
                                <TextArea fx:id="messageInput"
                                          promptText="Enter your prompt here... (Ctrl/Cmd+Enter to send)"
                                          HBox.hgrow="ALWAYS" prefRowCount="1" wrapText="true"
                                          styleClass="text-area-input">
                                    <HBox.margin>
                                        <Insets right="10.0" />
                                    </HBox.margin>
                                </TextArea>
                                <Button fx:id="sendButton" mnemonicParsing="false" text="Send"
                                        styleClass="button"
                                        style="-fx-padding: 10 20 10 20;" onAction="#handleSendMessage"/>
                            </children>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </VBox>
            </items>
        </SplitPane>

        <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0">
            <children>
               <Label fx:id="statusLabel" maxHeight="1.7976931348623157E308" maxWidth="-1.0"
                  text="Ready" HBox.hgrow="ALWAYS">
                  <font>
                     <Font size="11.0" fx:id="x3" />
                  </font>
                  <textFill>
                     <Color red="0.625" green="0.625" blue="0.625" fx:id="x4" />
                  </textFill>
               </Label>
               <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
               <Label fx:id="modelLabel" font="$x3" maxWidth="-1.0" text="Model: GPT-4o-mini"
                  textFill="$x4" HBox.hgrow="NEVER" />
               <!-- Theme Toggle Button -->
               <Button text="Toggle Theme" onAction="#toggleTheme" />
            </children>
            <padding>
               <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </padding>
        </HBox>

        <!-- Loading Overlay + Spinner (ADDED) -->
        <Pane fx:id="loadingOverlay" pickOnBounds="false">
            <children>
                <ProgressIndicator fx:id="loadingSpinner"
                                   visible="false"
                                   layoutX="420"
                                   layoutY="250"
                                   prefWidth="60"
                                   prefHeight="60"/>
            </children>
        </Pane>

    </children>
</VBox>
